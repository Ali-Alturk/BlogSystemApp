@model IEnumerable<BlogSystemApp.ViewComponents.RecentPostViewModel>

<div class="card shadow-sm recent-posts-widget">
    <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0">
            <i class="fas fa-clock me-2"></i>Recent Posts
        </h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="list-group list-group-flush">
                @foreach (var post in Model)
                {
                    <div class="list-group-item list-group-item-action border-0">
                        <div class="d-flex w-100 justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <h6 class="mb-1">
                                    <a asp-controller="Blog" asp-action="Details" asp-route-id="@post.Id" 
                                       class="text-decoration-none text-dark fw-semibold">
                                        @post.Title
                                    </a>
                                </h6>
                                <p class="mb-1 text-muted small">
                                    <i class="fas fa-user me-1"></i>@post.AuthorName
                                    <span class="mx-2">•</span>
                                    <i class="fas fa-folder me-1"></i>@post.CategoryName
                                </p>
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>@post.CreatedAt.ToString("MMM dd, yyyy")
                                    <span class="mx-2">•</span>
                                    <i class="fas fa-comments me-1"></i>@post.CommentCount comments
                                </small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="p-3 text-center text-muted">
                <i class="fas fa-inbox fa-2x mb-2"></i>
                <p class="mb-0">No recent posts available</p>
            </div>
        }
    </div>
</div>
